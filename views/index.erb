<html lang="en">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script src="/app.js"></script>
  <title>Application</title>

</head>

<body class="container">
<header class="blog-header py-3">
  <div class="text-center">
    <h1>Application to solve mathematical equations</h1>
  </div>
</header>
<hr>
<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <% if @reg_radio == "linear" %>
      <p id="show_input_l"><b> <%= @a_value %> </b>
        x + <b> <%= @b_value %></b> = 0 </p>
    <% else %>

      <p id="show_input_q"><b> <%= @a_value %> </b>
        x<sup>2</sup> + <b> <%= @b_value %></b>
        x + <b> <%= @c_value %>  </b> = 0 </p>
    <% end %>
    <p> Result: <%= @result %></p>


    <form action="/" method="POST" id="form_class">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="regRadio" id="Linear" value="linear"/>
        <label class="form-check-label" for="exampleRadios1">
          Linear
        </label>
      </div>
      <div class="form-check mb-3 ">
        <input class="form-check-input" type="radio" name="regRadio" id="Quadratic" value="quadratic" checked/>
        <label class="form-check-label" for="Quadratic">
          Quadratic
        </label>
      </div>

      <div class="input-group mb-3" id="input_form">
        <div class="input-group-prepend">
          <span class="input-group-text">a=</span>
        </div>
        <input type="number" class="form-control" size="30" name="a_value" value="1"/>
        <div class="input-group-prepend">
          <span class="input-group-text">b=</span>
        </div>
        <input type="number" step="any" class="form-control" name="b_value" value="1"/>
        <div id="c_element" class="input-group-prepend">
          <span class="input-group-text">c=</span>
        </div>
        <input id="c_element" type="number" step="any" class="form-control" name="c_value" value="1"/>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>

    </form>
  </div>
</div>
<hr>
</body>

</html>